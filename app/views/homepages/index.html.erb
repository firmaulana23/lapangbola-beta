    <div class="match-card">
      <div class="match-status">
        <span>LIVE</span>
        <span class="match-minute">53'</span>
      </div>
      <div class="match-info">
        <p class="team team-left">Persib</p>
        <p class="team-logo">Logo</p>
        <div class="score-box">
          <p>1</p>
          <p>:</p>
          <p>1</p>
        </div>
        <p class="team-logo">Logo</p>
        <p class="team team-right">Persija</p>
      </div>
    </div>

