<div class="homepage">
  <img src="<%= asset_path('premier-banner.png') %>" alt="Home Banner" class="home-banner" />

  <!-- Match Filters -->
  <div class="match-filters">
    <div class="filter-buttons">
      <button class="filter-button">All</button>
      <button class="filter-button">Live</button>
      <button class="filter-button">Finished</button>
      <button class="filter-button">Upcoming</button>
    </div>
    <div class="current-date"><%= Date.today.strftime("%a, %d %b %Y") %></div>
  </div>

  <!-- Match Section: Liga 1 Indonesia -->
  <div class="match-section">
    <div class="section-header">
      <h2 class="league-title">Liga 1 Indonesia</h2>
    </div>

